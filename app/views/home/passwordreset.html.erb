 <!-- Sign In Option 1 -->
    <div id="reset_pwd" class="reset_page">
        <div class="container">
            <div class="row">
                <div class="span12 box_wrapper">
                <div class="span12 box">
                    <div>
                        <div class="head">
                            <h4>Enter your email address below to receive instructions on how to reset your password.</h4>
                            <div class="line"></div>
                        </div>
                        <div class="form">

                        	<%= form_tag "/password-reset", :method=> :post do %>
								<%= text_field_tag :email, nil, :placeholder=>"Email address"%>
								<%= submit_tag "Reset Password" %>
							<% end %>

                        </div>
                    </div>
                </div>
                <p class="already">Know your password? <%= link_to "Sign in?", "/login" %></p>
            </div>
            </div>
        </div>
    </div>
